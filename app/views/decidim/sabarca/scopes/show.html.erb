<section class="wrapper">
  <div class="row">
    <h1 class="heading1 page-title"><%= translated_attribute @scope.name %></h1>
  </div>
  <div class="row section">
    <div class="map_entities columns small-12 large-9">

      <%= dynamic_map_for user_groups_data_for_map(@user_groups.select(&:geocoded?)) + mayor_neighborhoods_data_for_map(@scope.decidim_sabarca_mayor_neighborhoods.select(&:geocoded?)) do %>
        <template id="marker-popup">
          <div class="map-info__content">
            <h3>${name}</h3>
            <div id="bodyContent">
              <!-- <p>{{html body}}</p> -->
              <div class="phone">${phone}</div>
              <div class="phone">${email}</div>
              <div class="map__date-adress">
                <div class="address card__extra">
                  <div class="address__icon">{{html icon}}</div>
                  <div class="address__details">
                    <span>${address}</span><br />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </template>
        <%= stylesheet_link_tag "decidim/map" %>
        <%= javascript_include_tag "decidim/sabarca/scopes/id-#{@scope.id}-geojson" %>
        <%= javascript_include_tag "decidim/sabarca/scope_map" %>
      <% end %>
    </div>
    <div class="columns small-12 large-3">
      <ul>
        <% @user_groups.each do |user_group| %>
          <li>
            <%= user_group.name %>, <%= user_group.address %>, <%= user_group.phone %>, <%= user_group.users.first.email %>, <%= user_group.latitude %>, <%= user_group.longitude %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <% if @scope.decidim_sabarca_mayor_neighborhoods.any? %>
    <div class="row section">
      <% class_div = (@scope.decidim_sabarca_mayor_neighborhoods.upcoming.any? and @scope.decidim_sabarca_mayor_neighborhoods.past.any?) ?  "mediumlarge-6 large-6" : "mediumlarge-12 large-12" %>
      <% if @scope.decidim_sabarca_mayor_neighborhoods.upcoming.any? %>
        <div id="future-meetings" class="columns <%=class_div%>">
          <h3 class="heading2 section-heading"><%= t(".title_mayor_neighborhood_future") %></h3>
          <div class="row section">
            <%= render partial: 'decidim/sabarca/scopes/mayor_neighborhood', collection: @scope.decidim_sabarca_mayor_neighborhoods.upcoming, as: :mayor_neighborhood %>
          </div>
        </div>
      <% end %>
      <% if @scope.decidim_sabarca_mayor_neighborhoods.past.any? %>
        <div id="past-meetings" class="columns <%=class_div%>">
          <h3 class="heading2 section-heading"><%= t(".title_mayor_neighborhood_past") %></h3>
          <div class="row section">
            <%= render partial: 'decidim/sabarca/scopes/mayor_neighborhood', collection: @scope.decidim_sabarca_mayor_neighborhoods.past, as: :mayor_neighborhood %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if participatory_processes_organization.any? %>
    <section id ="participatory_processes" class="row section">
      <div class="section">
        <h2 class="heading2 section-heading"><%= t(".title_processes") %></h2>
      </div>
      <div class="row section">
        <%= render partial: "participatory_process", collection: participatory_processes_organization, as: :participatory_process %>
      </div>
    </section>
  <% end %>

  <div class="row section">
    <h3>Veure altres barris</h3>
    <ul>
      <% organization_scopes.each do |scope|%>
        <li>
          <%= link_to decidim_sabarca.city_close_up_path(scope) do %>
            <%= translated_attribute(scope.name) %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</section>
