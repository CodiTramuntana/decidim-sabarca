<div class="row collapse order-by">
  <h2 class="order-by__text section-heading">
    <%= t("scopes.order_by_mayor_neighborhoods.mayor_neighborhoods", scope: "layouts.decidim", count: collection_mayor_neighborhoods.count) %>
    <% if include_filter %>
      <span class="order-by__tabs">
        <% %w(past upcoming).each do |filter_name| %>
          <%= link_to t(".#{filter_name}"), { filter_mayor_neighborhood: filter_name }, remote: true, class: "order-by__tab #{'is-active' if filter_mayor_neighborhood == filter_name }" %>
        <% end %>
      </span>
    <% end %>
  </h2>
</div>
